#include <iostream>     
#include <string>       
using namespace std;   

struct nodo {      
    int num;           
    int id;             
    Persona* izq;       
    Persona* der;       
};
void mostrarMenu() {
    cout << "\n=== MENU ===\n";
    cout << "1. Insertar nodo\n";
    cout << "2. Mostrar in orden\n";
    cout << "3. Mostrar pre orden\n";
    cout << "4. Mostrar generaciones (por id)\n";
    cout << "5. Mostrar post orden\n";
    cout << "6. Decision\n";
    cout << "Seleccion: ";
    
// Recorridos
void inorden(Persona* raiz) {
    if (raiz != NULL) {
        inorden(raiz->izq);
        cout << ": " << raiz->nombre << ", Edad: " << raiz->edad << ", ID: " << raiz->id << endl;
        inorden(raiz->der);
    }
}

void preorden(Persona* raiz) {
    if (raiz != NULL) {
        cout << "Nombre: " << raiz->nombre << ", Edad: " << raiz->edad << endl;
        preorden(raiz->izq);
        preorden(raiz->der);
    }
}

void posorden(Persona* raiz) {
    if (raiz != NULL) {
        posorden(raiz->izq);
        posorden(raiz->der);
        cout << "Nombre: " << raiz->nombre << ", Edad: " << raiz->edad << endl;
    }
}
